
<div class="container">
	<div class="row">
		<h3>Create a new plot</h3>
		<div class="col-sm-1 col-sm-offset-11">
			<a href="/myprofile">Cancel</a>
		</div>
	</div>

	<form method="POST">

		<div class="form-group">
			<label for="cropname">Crop Name:</label>
			<input type="text" class="form-control" name="cropname">
		</div>

		<div class="form-group">
			<label for="price">Price:</label>
			<div class="input-group">
				<div class="input-group-addon">$</div>
				<input type="text" class="form-control" name="price" placeholder="Example: 1.50">
			</div>
		</div>

		<div class="form-group">
			<label for="status">Priced per:</label><br>
				<input type="radio" name="per" value="pound">Pound (lbs)<br>
				<input type="radio" name="per" value="unit">Unit<br>
		</div>

		<div class="form-group">
			<label for="status">Status:</label><br>
				<input type="radio" name="status" value="available">Available<br>
				<input type="radio" name="status" value="growing">Growing<br>
				<input type="radio" name="status" value="out of season">Out of Season<br>
		</div>

		<div class="form-group">
			<label for="instore">In Store?</label><br>
				<input type="radio" name="instore" value=True>Yes<br>
				<input type="radio" name="instore" value=False>No<br>
		</div>

		<div class="form-group">
			<label for="notes">Notes:</label>
			<textarea class="form-control" rows="5" name="notes"></textarea>
		</div>

		<button type="submit" class="btn btn-success">Create Plot</button>

	</div>

</div>
