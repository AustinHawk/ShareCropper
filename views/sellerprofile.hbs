{{> navbar this}}

<div class='userprofile-body'>
	<div class='left-user-column'>
		<div class='user-image'> 
			{{user.profileimg}}
		</div>
	</div>
	<div class='right-user-column'>
		<div class='title-name'>
			{{user.first}} {{user.last}}
		</div>
		<div class = 'user-biography'>
			{{user.biography}}
		</div>
		<div class =  'follow-line'> 
			<div class = 'one-follow'> 
				<div class = 'follow-number'>  {{following.length}} </div>
				<div class = 'follow-word'> Following </div>
			</div>
			<div class = 'one-follow'> 
				<div class = 'follow-number'> {{followers.length}} </div>
				<div class = 'follow-word'> Followers </div>
			</div>
			<div class = 'follow-line-button'><a href='/follow/{{user._id}}'> Follow </a></div>
			<div class = 'follow-line-button'> Message </div>
		</div>
		<div class = 'crop-box'>
			<div class = 'crop-title'>
				Crops
			</div>
			<div class = 'crop-class-cat'>
				For Sale
			</div>
			<div class = 'crop-grid'>
				{{#each crop}}
					{{#if instore}}
						<div class = 'crop-grid-unit'>
							<div class= 'crop-image'>
								<div class='crop-name-container'>
									<div class='crop-name'>
										{{cropname}}
									</div>
									<div class='crop-price'>
										${{price}} per {{unit}}
									</div>
								</div>
							</div>
						</div>
					{{/if}}
				{{/each}}
			</div>
		</div>
	</div>
</div>